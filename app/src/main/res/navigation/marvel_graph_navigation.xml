<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/marvel_graph_navigation"
    app:startDestination="@id/charactersFragment">

    <fragment
        android:id="@+id/charactersFragment"
        android:name="dev.dmanluc.openbankmobiletest.presentation.characters.CharactersFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_character_list">
        <action
            android:id="@+id/actionToCharacterDetail"
            app:destination="@id/characterDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="dev.dmanluc.openbankmobiletest.presentation.characterdetail.CharacterDetailFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_character_detail">
        <argument
            android:name="character"
            app:argType="dev.dmanluc.openbankmobiletest.domain.model.Character" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>

</navigation>